@model Candidate

@{
    ViewData["Title"] = "Add Candidate";
    var electionId = TempData["ElectionId"] as int?;
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Candidate" asp-action="Create" method="post" enctype="multipart/form-data">
    <input asp-for="ElectionId" type="hidden" value="@electionId" />
    
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Surname" class="control-label">Surname</label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile" class="control-label">Image Upload</label>
        <input asp-for="ImageFile" type="file" class="form-control-file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Candidate</button>
</form>
