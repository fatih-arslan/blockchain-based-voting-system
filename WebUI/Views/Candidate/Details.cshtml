@model Candidate

@{
    ViewData["Title"] = $"{Model.Name} {Model.Surname}";
}
<div style="height:150px;"></div>
<div class="container">

    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-3" id="candidate-card">
                    <img src="@Model.ImagePath" class="img-fluid" width="75%" id="ImageURLPreview" />
                </div>
                <div class="col-md-9">
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 mt-4">
        <div class="card-footer">
            <p class="card-text">
                <div class="mb-3" style="margin-top:10px;">
                    <a class="btn btn-outline-secondary" href='javascript:history.go(-1)'>Back</a>
                </div>
            </p>
        </div>
    </div>

</div>

<div style="height:150px;"></div>
