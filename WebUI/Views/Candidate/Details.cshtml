@model Candidate

@{
    ViewData["Title"] = $"{Model.Name} {Model.Surname}";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <div class="row">             
            <div class="col-md-6">
                <img src="@Model.ImagePath" class="img-fluid" width="50%" id="ImageURLPreview" />
            </div>
            <div class="col-md-6">
                <p class="card-text">@Model.Description</p>
            </div>                     
        </div>
    </div>
</div>

<div class="col-md-12 mt-4">
    <div class="card-footer">
        <p class="card-text">
            <div class="mb-3" style="margin-top:10px;">
                <a class="btn btn-outline-secondary" asp-controller="Election" asp-action="Details" asp-route-id="@Model.ElectionId">Back</a>
            </div>
        </p>
    </div>
</div>
