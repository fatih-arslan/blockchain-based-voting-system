@model Candidate

@{
    ViewData["Title"] = "Edit Candidate";
}

<h2>@ViewData["Title"]</h2>

<div class="row"

    <div class="row">
        <div class="col-md-6">
            <div class="col-md-6">
                <img src="@Model.ImagePath" width="75%" id="ImageURLPreview" />
            </div>
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>                
                <div class="row">
                    <div class="col-md-6">
                        <input asp-for="Id" hidden />
                        <input asp-for="ElectionId" type="hidden" value="@Model.ElectionId" />
                        <input asp-for="ImagePath" class="form-control" hidden/>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Surname" class="form-label"></label>
                            <input asp-for="Surname" class="form-control" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label"></label>
                            <input asp-for="ImageFile" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" style="resize:none" rows="6"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3" style="margin-top:10px;">
                    <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                    <a class="btn btn-outline-secondary" asp-controller="Election" asp-action="Edit" asp-route-id="@Model.ElectionId">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
